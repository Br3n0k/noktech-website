---
import { getLanguageFromURL, useTranslations } from '../i18n/utils';

const currentPath = Astro.url.pathname;
const lang = getLanguageFromURL(currentPath);
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-dark">
  <!-- Grid Pattern Background -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.03]"></div>
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-hero-gradient"></div>

  <!-- Glowing Orbs -->
  <div class="absolute top-1/4 -left-20 w-96 h-96 bg-primary/20 rounded-full filter blur-[100px] animate-pulse"></div>
  <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-primary/10 rounded-full filter blur-[100px] animate-pulse delay-1000"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8 inline-block">
        <span class="px-3 py-1 text-sm font-medium bg-dark-lighter text-primary rounded-full border border-dark-border">
          NokTech Solutions
        </span>
      </div>

      <h1 class="text-5xl md:text-7xl font-display font-extrabold text-white mb-6 tracking-tight">
        {t('hero.title')}
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-light">
          {t('hero.titleHighlight')}
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-400 mb-12 leading-relaxed">
        {t('hero.subtitle')}
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a href="#contact" 
           class="group relative px-8 py-4 bg-primary hover:bg-primary-dark text-white rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-[0_0_30px_rgba(255,0,0,0.3)]">
          <span class="relative z-10 font-semibold">{t('hero.cta.contact')}</span>
          <div class="absolute inset-0 bg-gradient-to-r from-primary-dark to-primary opacity-0 group-hover:opacity-100 rounded-lg transition-opacity duration-300"></div>
        </a>
        
        <a href="#portfolio" 
           class="group px-8 py-4 bg-dark-lighter text-white rounded-lg border border-dark-border hover:border-primary/50 transition-all duration-300 transform hover:-translate-y-1">
          <span class="font-semibold">{t('hero.cta.portfolio')}</span>
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-3 gap-8 mt-20">
        <div class="p-6 rounded-2xl bg-dark-card border border-dark-border">
          <div class="text-4xl font-bold text-primary mb-2">+10</div>
          <div class="text-gray-400 font-medium">{t('hero.stats.years')}</div>
        </div>
        <div class="p-6 rounded-2xl bg-dark-card border border-dark-border">
          <div class="text-4xl font-bold text-primary mb-2">+50</div>
          <div class="text-gray-400 font-medium">{t('hero.stats.projects')}</div>
        </div>
        <div class="p-6 rounded-2xl bg-dark-card border border-dark-border">
          <div class="text-4xl font-bold text-primary mb-2">100%</div>
          <div class="text-gray-400 font-medium">{t('hero.stats.satisfaction')}</div>
        </div>
      </div>
    </div>
  </div>
</section> 