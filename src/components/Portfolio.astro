---
import { getLanguageFromURL, useTranslations } from '../i18n/utils';

const currentPath = Astro.url.pathname;
const lang = getLanguageFromURL(currentPath);
const t = useTranslations(lang);

const projects = [
  {
    id: 'pecfort',
    image: '/images/portfolio/pecfort.png',
    url: 'https://pecfort.com.br',
    description: t('portfolio.pecfort.description'),
    features: [
      t('portfolio.pecfort.feature1'),
      t('portfolio.pecfort.feature2'),
      t('portfolio.pecfort.feature3'),
      t('portfolio.pecfort.feature4')
    ]
  },
  {
    id: 'oxxen',
    image: '/images/portfolio/oxxen.png',
    url: 'https://oxxen.com.br',
    description: t('portfolio.oxxen.description'),
    features: [
      t('portfolio.oxxen.feature1'),
      t('portfolio.oxxen.feature2'),
      t('portfolio.oxxen.feature3'),
      t('portfolio.oxxen.feature4')
    ]
  },
  {
    id: 'noktech_deploy',
    title: t('portfolio.noktech_deploy.title'),
    image: '/images/portfolio/noktech-deploy.webp',
    url: 'https://github.com/Br3n0k/noktech-deploy',
    description: t('portfolio.noktech_deploy.description'),
    features: [
      t('portfolio.noktech_deploy.feature1'),
      t('portfolio.noktech_deploy.feature2'),
      t('portfolio.noktech_deploy.feature3'),
      t('portfolio.noktech_deploy.feature4')
    ]
  },
  {
    id: 'noktech_theliarcrow',
    title: t('portfolio.noktech_theliarcrow.title'),
    image: '/images/portfolio/noktech-llm.webp',
    url: 'https://github.com/Br3n0k/noktech-theliarcrow',
    description: t('portfolio.noktech_theliarcrow.description'),
    features: [
      t('portfolio.noktech_theliarcrow.feature1'),
      t('portfolio.noktech_theliarcrow.feature2'),
      t('portfolio.noktech_theliarcrow.feature3'),
      t('portfolio.noktech_theliarcrow.feature4')
    ]
  }
];
---

<section id="portfolio" class="relative py-20 overflow-hidden bg-gradient-to-b from-dark to-dark-lighter">
  <!-- Grid Pattern Background -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.03]"></div>

  <!-- Gradient Orbs -->
  <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary/30 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
  <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary/30 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16">
      <span class="text-primary font-medium inline-block px-4 py-1 rounded-full bg-primary/10 mb-4">{t('portfolio.label')}</span>
      <h2 class="text-5xl font-bold mt-2 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">{t('portfolio.heading')}</h2>
      <p class="text-gray-400 mt-6 max-w-3xl mx-auto text-lg">{t('portfolio.subheading')}</p>
    </div>

    <div class="grid grid-cols-1 gap-16">
      {projects.map((project, index) => (
        <div class={`flex flex-col lg:flex-row gap-8 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
          <!-- Imagem do Projeto -->
          <div class="lg:w-1/2">
            <div class="group relative overflow-hidden rounded-3xl">
              <div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <img 
                src={project.image} 
                alt={project.title || project.id}
                class="w-full h-auto rounded-3xl transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <a 
                  href={project.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-primary/90 hover:bg-primary text-white px-6 py-3 rounded-full font-medium transform hover:scale-105 transition-all duration-300"
                >
                  {t('portfolio.visitSite')}
                </a>
              </div>
            </div>
          </div>

          <!-- Detalhes do Projeto -->
          <div class="lg:w-1/2 flex flex-col justify-center">
            <div class="relative">
              <div class="absolute -inset-1 bg-gradient-to-r from-primary/20 to-primary/40 rounded-3xl blur-lg opacity-40"></div>
              <div class="relative bg-dark-lighter/50 backdrop-blur-lg p-8 rounded-2xl border border-primary/20">
                <h3 class="text-2xl font-bold mb-4 text-primary">{project.title || project.id}</h3>
                <p class="text-gray-300 mb-6 leading-relaxed">{project.description}</p>
                
                <div class="space-y-4">
                  {project.features.map((feature) => (
                    <div class="flex items-start space-x-3">
                      <div class="w-6 h-6 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                        <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                      </div>
                      <span class="text-gray-300 leading-relaxed">{feature}</span>
                    </div>
                  ))}
                </div>

                <div class="mt-8">
                  <a 
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center space-x-2 text-primary hover:text-primary/80 transition-colors"
                  >
                    <span>{t('portfolio.visitSite')}</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.3;
    }
  }
</style> 