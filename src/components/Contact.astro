---
import { getLanguageFromURL, useTranslations } from '../i18n/utils';

const currentPath = Astro.url.pathname;
const lang = getLanguageFromURL(currentPath);
const t = useTranslations(lang);
---

<section id="contact" class="relative py-24 bg-dark-light overflow-hidden">
  <!-- Grid Pattern Background -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.03]"></div>

  <!-- Gradient Orb -->
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary/10 rounded-full filter blur-[100px]"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-16">
        <span class="px-3 py-1 text-sm font-medium bg-dark-lighter text-primary rounded-full border border-dark-border inline-block mb-4">
          {t('contact.label')}
        </span>
        <h2 class="text-3xl md:text-5xl font-bold mb-6 text-white">
          {t('contact.heading')}
        </h2>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          {t('contact.subheading')}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-dark-card border border-dark-border rounded-2xl p-8">
            <h3 class="text-xl font-bold text-white mb-6">{t('contact.info.title')}</h3>
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="w-12 h-12 rounded-xl bg-dark-lighter border border-dark-border flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-medium mb-1">{t('contact.info.email.label')}</h4>
                  <a href="mailto:contato@noktech.com.br" class="text-gray-400 hover:text-primary transition-colors">
                    contato@noktech.com.br
                  </a>
                </div>
              </div>

              <div class="flex items-start group">
                <div class="w-12 h-12 rounded-xl bg-dark-lighter border border-dark-border flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-medium mb-1">{t('contact.info.whatsapp.label')}</h4>
                  <a href="https://wa.me/5562991598979" 
                     target="_blank" 
                     rel="noopener noreferrer" 
                     class="text-gray-400 hover:text-primary transition-colors group-hover:text-primary">
                    (62) 99159-8979
                  </a>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-12 h-12 rounded-xl bg-dark-lighter border border-dark-border flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-medium mb-1">{t('contact.info.location.label')}</h4>
                  <p class="text-gray-400">
                    Goiânia, GO
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-dark-card border border-dark-border rounded-2xl p-8">
          <form 
            action="https://formsubmit.co/br3n0k@gmail.com" 
            method="POST"
            class="space-y-6"
          >
            <!-- Configurações do FormSubmit -->
            <input type="hidden" name="_next" value="https://noktech.com.br/obrigado">
            <input type="hidden" name="_subject" value="Novo contato do site NokTech">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_template" value="box">

            <div>
              <label for="name" class="block text-white font-medium mb-2">{t('contact.form.name')}</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-dark-lighter border border-dark-border rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors"
                placeholder={t('contact.form.namePlaceholder')}
              />
            </div>

            <div>
              <label for="email" class="block text-white font-medium mb-2">{t('contact.form.email')}</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-dark-lighter border border-dark-border rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors"
                placeholder={t('contact.form.emailPlaceholder')}
              />
            </div>

            <div>
              <label for="message" class="block text-white font-medium mb-2">{t('contact.form.message')}</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full bg-dark-lighter border border-dark-border rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-primary transition-colors"
                placeholder={t('contact.form.messagePlaceholder')}
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white font-medium py-3 px-6 rounded-lg transition-colors duration-300 transform hover:-translate-y-1 hover:shadow-[0_0_30px_rgba(255,0,0,0.3)]"
            >
              {t('contact.form.submit')}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section> 